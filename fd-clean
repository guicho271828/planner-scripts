#!/bin/bash
#-*- mode:sh -*-

################################################################
#### default options

################################################################
#### main

# echo $FD_DIR

find-fd (){
    # echo "finding fd installation from $1 ..."
    if [[ -d $1/downward ]]
    then
        FD_DIR=$(readlink -ef $1/downward)
    else
        if [[ $1 == / ]]
        then
            exit 1
        else
            find-fd $(readlink -ef $1/..)
        fi
    fi
}

if [[ ! -e $FD_DIR/src/fast-downward.py ]]
then
    find-fd $(dirname $(readlink -ef $0))
fi


plan(){
    echo $(whoami)@$(hostname)
    OPTIONS=${OPTIONS:-"--alias seq-sat-lama-2011"}
    declare -a array=($OPTIONS)
    if [[ ${array[0]} == --alias ]]
    then
        echodo $FD_DIR/src/fast-downward.py \
            $OPTIONS \
            --run-all \
            --plan-file $probdir/$probname.plan \
            $(if $VERBOSE ; then echo "--log-level info" ; else echo "--log-level warning" ; fi) \
            domain.pddl problem.pddl
    else
        echodo $FD_DIR/src/fast-downward.py \
            --run-all \
            --plan-file $probdir/$probname.plan \
            $(if $VERBOSE ; then echo "--log-level info" ; else echo "--log-level warning" ; fi) \
            domain.pddl problem.pddl \
            $OPTIONS
    fi
}

finalize (){
    :
}

negatively-proven (){
    grep "Completely explored state space" log &> /dev/null
}

report-results (){
    awk "/Plan cost:/{print $2}" log | sort | head -n 1
}

################################################################

. $SCRDIR/common.sh
